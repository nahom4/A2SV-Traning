n ,k = map(int,input().split())
array = list(map(int,input().split()))
array.sort()
if k == 0:
    if array[0] == 1:
        print(-1)
    else:
        print(1)
  
elif len(array) == 1:
    print(array[0])
elif k == n:
    print(array[k - 1])
elif array[k - 1] == array[k]:
    print(-1)
else:
    print(array[k - 1])

#min value 1
